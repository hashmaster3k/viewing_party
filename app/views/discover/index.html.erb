<center>
  <h1>Welcome <%= current_user.humanize_username %>!</h1>
  <%= button_to 'Find Top Rated Movies', movies_path, params: {q: 'top rated'}, method: :get %>

  <h3>OR</h3>
  <div class="search_movie_form">
    <%= render partial: './search_form' %>
  </div>
<br><br>
  <hr>
  <h3>Coming Soon to Viewing Party</h3>
  <div class="upcoming">
    <% @upcoming_movies.each do |movie| %>
    <div class="upcoming-movie">
      <%= image_tag "https://image.tmdb.org/t/p/w500#{movie.poster}" %>
    </div>
    <% end %>
  </div>
</center>
