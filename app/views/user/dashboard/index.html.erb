<center>
  <h1>Welcome <%= current_user.humanize_username %>!</h1>
  <%= button_to 'Discover Movies', '/discover', method: :get %>
</center>

<div class='friends'>
  <%= render partial: 'friends' %>
</div>

<section class='parties'>
  <h2>Viewing Parties</h2><hr>
  <% if @hosted_parties.count > 0 || @invited_parties.count > 0 %>
    <article class="hosting_parties">

      <% if @hosted_parties.count > 0 %>
        <% @hosted_parties.each do |party| %>
          <div id=party-<%=party.id%>>
            <%= party.movie_title %><br/><br/>
            <%= party.date_formatted %><br/>
            <%= party.time_formatted %><br/><br/>
            Hosting
          </div>
        <% end %>
      <% end %>
    </article>

    <article class="invited_parties">
      <% if @invited_parties.count > 0 %>
        <% @invited_parties.each do |party| %>
          <div id=party-<%=party.id%>>
            <%= party.movie_title %><br/><br/>
            <%= party.date %><br/>
            <%= party.time %><br/><br/>
            Invited
          </div>
        <% end %>
      <% end %>
    </article>
  <% else %>
    <center><h4>You have no parties</h4></center>
  <% end %>
</section>
